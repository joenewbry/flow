# Prometheus Memex Server Configuration

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
LOG_LEVEL=INFO

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=/ssd/memex/chroma

# Data directories
DATA_BASE_DIR=/ssd/memex/data

# Ollama (AI Validator)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=10.0

# Security
SECURITY_POLICY_PATH=/ssd/memex/config/security-policy.md
API_KEYS_PATH=/ssd/memex/config/api_keys.env

# Instances (comma-separated)
INSTANCES=personal,walmart,alaska
